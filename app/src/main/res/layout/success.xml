<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:id="@+id/greencolor"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:background="@color/royal_blue"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/successtick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/success"
            android:layout_toEndOf="@id/greencolor"
            android:layout_marginStart="4dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/successtick"
            android:layout_toStartOf="@id/closebtn"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4BB543"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:id="@+id/message"
                android:text="tr7r6t8769jt6"
                android:textColor="#4BB543"
                />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@+id/layout"
            android:layout_centerInParent="true"
            android:background="#92000000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closebtn"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/shape"
            android:backgroundTint="#61FFFFFF"
            android:text="Close"
            android:textAllCaps="false" />

    </RelativeLayout>


</RelativeLayout>