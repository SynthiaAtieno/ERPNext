<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/shape"
    android:backgroundTint="#DFE0E8"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:id="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:text="Confirm log out"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="18sp" />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#60055C9D"
            android:layout_below="@id/textView"/>


        <TextView
            android:id="@+id/alerttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="Are you sure you want to log out?"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/reset_btn"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/alerttext"
            android:layout_toLeftOf="@+id/okbtn"
            android:layout_marginEnd="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okbtn"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/reset_btn"
            android:layout_marginEnd="18dp"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/alerttext"
            android:layout_marginBottom="18dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>