<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.profile.OverviewFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        android:layout_margin="4dp"
      >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp">


            <LinearLayout
                android:id="@+id/empidlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/shape"
                    android:src="@drawable/ic_baseline_person_24"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </LinearLayout>
            <View
                android:layout_below="@id/empidlayout"
                android:id="@+id/firstviewforpayslip"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout

                android:id="@+id/empphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstviewforpayslip"
                android:padding="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:textColor="#AA000000"
                    android:layout_marginEnd="18dp"

                    android:background="@drawable/shape"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_below="@id/empphone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/firstviewforpayslip2"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/emaillayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/empphone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape"
                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_marginEnd="18dp"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <View
                android:layout_below="@id/emaillayout"
                android:layout_width="match_parent"
                android:id="@+id/view1"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/doblayout"
                android:layout_width="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/emaillayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_baseline_access_time_filled_24"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_below="@+id/doblayout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout
                android:layout_marginTop="14dp"
                android:id="@+id/bloodidlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doblayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_baseline_bloodtype_24"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <View
                android:layout_below="@id/bloodidlayout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/dateofjoining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bloodidlayout"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_baseline_access_time_filled_24"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_dateofjoining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_below="@+id/dateofjoining"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#20000000" />
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateofjoining"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>