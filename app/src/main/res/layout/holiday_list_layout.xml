<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativelaypoutforholiday"
    app:cardElevation="18dp">

    <RelativeLayout
        android:padding="14dp"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/holiday_icon"
    android:layout_alignParentStart="true"
    android:layout_marginEnd="12dp"
    android:id="@+id/circular_image_view"
    />
    <TextView
        android:id="@+id/holidayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diwali Holiday"
        android:textColor="@color/text_color"
        android:layout_toEndOf="@id/circular_image_view"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:id="@+id/holiday"
        android:textColor="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holidayname"
        android:text="Holiday"
       />

    <TextView
        android:layout_below="@id/holidayname"
        android:id="@+id/holidaydate"
        android:textColor="@color/text_color"
        android:layout_toEndOf="@id/circular_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </RelativeLayout>

    <View
        android:id="@+id/firstviewforpayslip"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/text_color"
        android:layout_below="@id/relative"
        android:layout_marginTop="6dp"
        android:background="#20000000" />
</RelativeLayout>

