<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PaySlipActivity2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payslip_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"
                    android:text="Month"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="60dp"
                    android:text="From"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month"
                    android:layout_toEndOf="@id/from"
                    android:text="To"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_item_textfrom"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/months"
                    android:padding="6dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_item_textto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toEndOf="@id/spinner_item_textfrom"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/months"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_item_year"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/year"
                    android:padding="6dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="January"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="8dp"
                  android:orientation="horizontal">

                <TextView
                    android:id="@+id/working_daystxtfirstmonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Working days"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/working_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
              </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="2dp"
                android:background="#46000000" />

            <FrameLayout
                android:id="@+id/framemonthpayslip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/earnings_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="8dp"
                        android:text="Earnings"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/earnings_title"
                    android:id="@+id/salarysliprecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/salaryslipitemearning"/>

                    <View
                        android:id="@+id/firstview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/salarysliprecycler"
                        android:layout_marginTop="8dp"
                        android:background="#46000000" />

                    <TextView
                        android:id="@+id/grossearningstitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/firstview"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:text="Gross Earnings"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/grossearnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/firstview"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="40000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/firstmonthview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/grossearningstitle"
                        android:background="#46000000" />

                    <TextView
                        android:id="@+id/totalPayfirstmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#544EE4"
                        android:text="Total Pay :"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/firstmonthview"/>

                    <TextView
                        android:id="@+id/TotalPayAmountFirstMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/totalPayfirstmonth"
                        android:layout_marginStart="6dp"
                        android:textSize="18sp"
                        android:textColor="#544EE4"
                        android:text="200000.00 KSH"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/firstmonthview"/>

                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/secondmonthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="January"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/working_daystxtsecondmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working days"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/working_daysecondmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framesecondmonthpayslip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/deductions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="8dp"
                        android:text="Deductions"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/incometaxtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/deductions_title"
                        android:layout_alignParentStart="true"
                        android:text="Income Tax"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/incometax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/deductions_title"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:text="1000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/insurancetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/incometaxtitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:text="Insurance"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/incometax"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="20000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/nssftitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/insurancetitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:text="NSSF"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/nssf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/insurance"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="9000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/providendfundtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nssftitle"
                        android:layout_alignParentStart="true"
                        android:text="Providend Fund"
                        android:layout_marginTop="8dp"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/providendfund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nssf"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:text="50000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/socialsecuritytitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/providendfundtitle"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:text="Social Security Fund"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/socialsecurity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/providendfund"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="3000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/secondview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/socialsecuritytitle"
                        android:layout_marginTop="8dp"
                        android:background="#46000000" />

                    <TextView
                        android:id="@+id/grossdeductionstitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secondview"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="8dp"
                        android:text="Gross Deductions"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/grossdeductions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secondview"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="40000.00"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/secondmontview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/grossdeductionstitle"
                        android:background="#46000000" />

                    <TextView
                        android:id="@+id/totalPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#544EE4"
                        android:text="Total Pay :"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/secondmontview"/>

                    <TextView
                        android:id="@+id/TotalPayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/totalPay"
                        android:layout_marginStart="6dp"
                        android:textSize="18sp"
                        android:textColor="#544EE4"
                        android:text="200000.00 KSH"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/secondmontview"/>
                </RelativeLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/generate_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/reset_btn"
                    android:padding="12dp"
                    android:text="Generate All"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>