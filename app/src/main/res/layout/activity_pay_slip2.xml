<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    tools:context=".activities.PaySlipActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/payslip_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp"
                android:text="Month"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Year"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="60dp"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:layout_toEndOf="@id/from"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_item_textfrom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_profile"
                android:entries="@array/months"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_item_textto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"
                android:layout_toEndOf="@id/spinner_item_textfrom"
                android:background="@drawable/btn_profile"
                android:entries="@array/months"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_item_year"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/from"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_profile"
                android:entries="@array/year"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monthtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="January"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/working_daystxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Working days 23"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#46000000" />

        <FrameLayout
            android:id="@+id/framemonthpayslip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/earnings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:text="Earnings"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/employeebasesalarytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/earnings_title"
                    android:layout_alignParentStart="true"
                    android:text="Base Slary"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/employee_basesalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/earnings_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="1000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/houseallowancetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/employeebasesalarytitle"
                    android:layout_marginTop="8dp"
                    android:text="House Allowance"
                    android:layout_alignParentStart="true"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/houseallowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/employee_basesalary"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="20000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/medicalallowancetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/houseallowancetitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="Medical Allowance"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/medicalallowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/houseallowance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="9000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/transportallowancetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medicalallowancetitle"
                    android:layout_alignParentStart="true"
                    android:text="Transport Allowance"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/transportallowance"
                    android:layout_below="@+id/medicalallowance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="50000.00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/leaveencashmenttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave Encashment"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/transportallowancetitle"
                        android:layout_marginTop="8dp"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/leaveencashment"
                        android:layout_below="@id/transportallowance"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="#000"
                        android:layout_marginEnd="8dp"
                        android:text="3000.00"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/leaveencashmenttitle"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/firstview"
                    android:background="#46000000" />
                    <TextView
                        android:id="@+id/grossearningstitle"
                        android:layout_below="@+id/firstview"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="Gross Earnings"
                        android:layout_alignParentStart="true"
                        android:textColor="#AA000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/grossearnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#544EE4"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/firstview"
                        android:text="40000.00"
                        android:layout_marginEnd="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/grossearningstitle"
                    android:layout_height="2dp"
                    android:background="#46000000" />

            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/secondmonthtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="January"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/first_working_daystxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Working days 23"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#46000000" />

        <FrameLayout
            android:id="@+id/framesecondmonthpayslip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/deductions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp"
                    android:text="Deductions"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/incometaxtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deductions_title"
                    android:layout_alignParentStart="true"
                    android:text="Income Tax"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/incometax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deductions_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="1000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/insurancetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incometaxtitle"
                    android:layout_marginTop="8dp"
                    android:text="Insurance"
                    android:layout_alignParentStart="true"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/incometax"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="20000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/nssftitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/insurancetitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:text="NSSF"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nssf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/insurance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="9000.00"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/providendfundtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nssftitle"
                    android:layout_alignParentStart="true"
                    android:text="Providend Fund"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/providendfund"
                    android:layout_below="@+id/nssf"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="50000.00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/socialsecuritytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Encashment"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/providendfundtitle"
                    android:layout_marginTop="8dp"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/socialsecurity"
                    android:layout_below="@id/providendfund"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp"
                    android:text="3000.00"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/socialsecuritytitle"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/secondview"
                    android:background="#46000000" />
                <TextView
                    android:id="@+id/grossdeductionstitle"
                    android:layout_below="@+id/secondview"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    android:text="Gross Deductions"
                    android:layout_alignParentStart="true"
                    android:textColor="#AA000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/grossdeductions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#544EE4"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/secondview"
                    android:text="40000.00"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_below="@id/grossdeductionstitle"
                    android:layout_height="2dp"
                    android:background="#46000000" />

            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/generate_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/reset_btn"
                android:padding="12dp"
                android:text="Generate All"
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>