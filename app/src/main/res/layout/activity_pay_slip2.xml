<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PaySlipActivity2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payslip_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="12dp"
                    android:text="Month"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Year"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="60dp"
                    android:text="From"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month"
                    android:layout_toEndOf="@id/from"
                    android:text="To"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_item_textfrom"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/months"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_item_textto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_toEndOf="@id/spinner_item_textfrom"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/months"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_item_year"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/from"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/btn_profile"
                    android:entries="@array/year"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="January"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/working_daystxtfirstmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Working days"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/working_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#46000000" />

            <LinearLayout
                android:id="@+id/linearlayoutforfirstmonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/framemonthpayslip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/earnings_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="8dp"
                            android:text="Earnings"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/salarysliprecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/earnings_title"
                            tools:listitem="@layout/salaryslipitemearning" />

                        <View
                            android:id="@+id/firstview"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/salarysliprecycler"
                            android:layout_marginTop="8dp"
                            android:background="#46000000" />

                        <TextView
                            android:id="@+id/grossearningstitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstview"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="8dp"
                            android:text="Gross Earnings"
                            android:textColor="#AA000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/grossearnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstview"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="40000.00"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/firstmonthview"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/grossearningstitle"
                            android:layout_marginTop="8dp"
                            android:background="#46000000" />

                        <TextView
                            android:id="@+id/totalPayfirstmonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/firstmonthview"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="8dp"
                            android:text="Total Pay :"
                            android:textColor="#544EE4"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/TotalPayAmountFirstMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/firstmonthview"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_toEndOf="@id/totalPayfirstmonth"
                            android:text="200000.00 KSH"
                            android:textColor="#544EE4"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </RelativeLayout>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/secondmonthtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="January"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/working_daystxtsecondmonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Working days"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/working_daysecondmonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/framesecondmonthpayslip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/deductions_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="8dp"
                            android:text="Deductions"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerviewdeductions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/deductions_title"
                            tools:listitem="@layout/salaryslipitemdeductions" />

                        <View
                            android:id="@+id/deductionsview"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/recyclerviewdeductions"
                            android:layout_marginTop="8dp"
                            android:background="#46000000" />

                        <TextView
                            android:id="@+id/grossdeductionstitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/deductionsview"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="8dp"
                            android:text="Gross Earnings"
                            android:textColor="#AA000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/grossdeductions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/deductionsview"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="40000.00"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/deductionfirstmonthview"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/grossdeductionstitle"
                            android:layout_marginTop="8dp"
                            android:background="#46000000" />

                        <TextView
                            android:id="@+id/netpaytitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/deductionfirstmonthview"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="8dp"
                            android:text="Total Pay"
                            android:textStyle="bold"
                            android:textColor="#AA000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/netPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/deductionfirstmonthview"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_toEndOf="@id/netpaytitle"
                            android:text="40000.00"
                            android:textColor="#3D58EF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tomonthtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="January"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/working_dayssecondtxtmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="Working days"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/working_dayssecondmonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/generate_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/reset_btn"
                    android:padding="12dp"
                    android:text="Generate All"
                    android:textColor="@color/white" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>